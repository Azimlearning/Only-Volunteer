rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
      match /saved_listings/{listingId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }
    match /donations/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if false;
    }
    match /aid_resources/{id} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }
    match /donation_drives/{id} {
      allow read: if true;
      allow create: if isSignedIn() && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ngo' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      allow update, delete: if isSignedIn() && resource.data.ngoId == request.auth.uid;
    }
    match /micro_donations/{id} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.requesterId == request.auth.uid ||
        request.resource.data.fulfilledBy == request.auth.uid
      );
      allow delete: if isSignedIn() && resource.data.requesterId == request.auth.uid;
    }
    match /volunteer_listings/{id} {
      allow read: if true;
      allow create, update, delete: if isSignedIn();
    }
    match /applications/{id} {
      allow read, write: if isSignedIn();
    }
    match /attendances/{id} {
      allow read, write: if isSignedIn();
    }
    match /e_certificates/{id} {
      allow read: if true;
      allow create: if isSignedIn();
    }
    match /alerts/{id} {
      allow read: if true;
      allow create, update, delete: if isSignedIn();
    }
    match /feed_posts/{id} {
      allow read: if true;
      allow create, update, delete: if isSignedIn();
    }
    match /feed_comments/{id} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }
    match /reports/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if false;
    }
  }
}
